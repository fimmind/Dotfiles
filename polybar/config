; %{l} $(workspaces) %{c} $(date) %{r} $(cpu)     $(ram)     $(rom)     $(volume)     $(network)

[colors]
black = #1d2021
darkred = #cc241d
darkgreen = #98971a
darkyellow = #d79921
darkblue = #458588
darkmagenta = #b16286
darkcyan = #689d6a
lightgray = #a89984
gray = #928374
red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
magenta = #d3869b
cyan = #8ec07c
white = #ebdbb2
background = ${self.black}
foreground = ${self.white}

[bar/top]
monitor = HDMI1
background = ${colors.background}
foreground = ${colors.foreground}
width = 100%
height = 24
line-size = 2

font-0 = DejaVu Sans Mono:size=10
locale = en_US.UTF-8

padding-left = 0
padding-right = 1

module-margin = 2
modules-left = wm
modules-center = time
modules-right = cpu ram rom volume network

tray-position = none

[module/wm]
type = internal/bspwm

pin-workspaces = true

label-focused = %index%
label-focused-underline = ${colors.magenta}
label-focused-padding = 1

label-occupied = %index%
label-occupied-underline = ${colors.blue}
label-occupied-padding = 1

label-urgent = %index%
label-urgent-underline = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.lightgray}
label-empty-padding = 1

[module/time]
type = internal/date
interval = 5
date = "%A, %B %d, %I:%M%P"

[module/cpu]
type = internal/cpu
label = CPU %percentage%%
format-underline = ${colors.blue}

[module/ram]
type = internal/memory
label = RAM %percentage_used%% + %gb_free%
format-underline = ${colors.blue}

[module/rom]
type = internal/fs
mount-0 = /
label-mounted = ROM %percentage_used%% + %free%
label-mounted-underline = ${colors.blue}
label-unmounted = ROM / unmounted
label-unmounted-underline = ${colors.red}

[module/volume]
type = internal/alsa
label-volume = VOL %percentage%%
label-volume-underline = ${colors.blue}
label-muted = VOL %percentage%%
label-muted-underline = ${colors.red}

[module/network]
type = internal/network
interface = wlp0s20f0u7
label-connected = NET %essid%
label-connected-underline = ${colors.blue}
label-disconnected = NET -
label-disconnected-underline = ${colors.red}

# vim: ft=dosini
